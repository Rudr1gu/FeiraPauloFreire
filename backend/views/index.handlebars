<style>
    :root{
        --cor1:#CDD5C6; /*Cor do fundo*/
        --cor2:#B7BCBF; /* Cor da caixa*/
        --cor3:#000000b2; /* Cor da fonte*/
    }
    .corpo{
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: var(--cor1);
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "Quicksand", sans-serif;    
    }
    .portifolio{
        background-color: var(--cor2);
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 550px;
        min-height: 75vh;
        overflow: hidden;
        text-align: center;
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.699);
        color: var(--cor3);
    }
    div.avatar{
        margin: auto;
        margin-top: 80px;
        margin-bottom: 30px;
        width: 130px;
        height: 130px;
        border-radius: 10%;
        background-image: url(img/avatares/13.png);
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;   
    }

    p, a{
        overflow-wrap: break-word;
        text-align: center;
        margin: 4px;
        border: none;
    }

    a:hover{
        background-color: rgba(255, 255, 255, 0.336);
        backdrop-filter: blur(3px);
        border-radius: 20px;
    }
    div.redes{
        display: flex;
        flex-direction: row;
        margin: auto;
        margin-top: 15px;
        font-size: 30pt;
    }
    a, h2, h3, button{
        text-shadow: 0px 1px 2px rgba(148, 124, 102, 0.76);
        color: var(--cor3);
    }
    button.inte{
        width: 100px;
        height: 23px;
        margin: 4px;
        border: none;
        border-radius: 25px;
        background-color: rgba(255, 255, 255, 0.411);
        font-family: "Quicksand", sans-serif;
        font-weight: bold;
        color: var(--cor3);
        font-size: 12pt;
        box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.333);
    }
    p.email{
        margin-top: 120px;
        font-size: 15pt;
    }
    

</style>

{{!-- icones --}}
{{!-- https://fontawesome.com/ --}}
{{!-- https://boxicons.com --}}


<section class="corpo">
    <section class="portifolio">
        <div class="avatar"> </div>
    
        {{#each posts}}
    
            <h2>{{nome}}</h2>
            <br>
            <p>{{biografia}}</p>
            <br>
            <br>
            <br>

            <h3> Meus interesses: </h3>
            <br>

            <div id="res" >
                {{!-- campos de interesse --}}
                <button class="inte">{{esporte}}</button>
                <button class="inte">{{musica}}</button>
                <button class="inte">{{filme}}</button>
                <button class="inte">{{series}}</button>
                <button class="inte">{{anime}}</button>
                <button class="inte">{{praia}}</button>
                <button class="inte">{{natureza}}</button>
            </div>
            
            <p class="email"><i class='bx bxs-envelope'></i>    {{email}}</p>

            <div class="redes">
                <a target="_blank" href=https://facebook.com/{{facebook}}><i class='bx bxl-facebook'></i> </a>
                <a target="_blank" href=https://instagram.com/{{instagram}}><i class='bx bxl-instagram-alt'></i> </a>
                <a target="_blank" href=https://wa.me/+55{{whatsapp}}><i class="fa-brands fa-square-whatsapp"></i></a>
                <a target="_blank" href=https://twitter.com/{{spotify}}><i class='bx bxl-twitter'></i> </a>
                <a target="_blank" href=https://linkedin.com/in/{{linkedin}}><i class='bx bxl-linkedin' ></i> </a>
            </div>
        {{/each}}
    </section>
</section>